@{
    ViewData["Title"] = "Channel Youtube Manager ";
}

<div class="container">
    <div class="div-center">
        <h4>Add Computer </h4>
        <div class="row">
            @{
                Microsoft.Extensions.Primitives.StringValues queryVal;

                if (Context.Request.Query.TryGetValue("error", out queryVal) &&
                queryVal.FirstOrDefault() == "wrongName")
                {
                    <p class="text-danger">Máy đã tồn tại.</p>
                }
                else if (Context.Request.Query.TryGetValue("error", out queryVal) &&
                queryVal.FirstOrDefault() == "error")
                {
                    <p class="text-danger">Thử lại.</p>
                }
                else if (Context.Request.Query.TryGetValue("msg", out queryVal) &&
                queryVal.FirstOrDefault() == "added")
                {
                    <p class="text-success">Đã thêm máy.</p>
                }
            }
        </div>
        <div>
            @using (Html.BeginForm("Create", "ChannelYoutube", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="book">Computer Name</label>
                    <input type="text" class="form-control" name="name" id="name"  placeholder="" required>
                </div>
                <div class="form-group">
                    <label for="author">IP</label>
                    <input type="text" class="form-control" name="link" id="link"  placeholder="" required>
                </div>
                <div class="form-group" >
                    <label for="author">Port</label>
                    <input type="text" class="form-control" name="category" id="category" value="1"  placeholder="" required>
                </div>
                <div class="form-group" hidden>
                    <label for="author">Category </label>
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group" hidden>
                    <label for="author">Cooka Account </label>
                    @Html.DropDownList("CookaAccountId", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="author">Employee</label>
                    <input type="text" class="form-control" name="userid" id="userid" placeholder="" required>
                </div>
                <div class="actions">
                    @Html.ActionLink("Back", "Index", "ChannelYoutube", new { }, new { @class = "btn btn-info" })
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            }
        </div>
    </div>
</div>
<style>
    .actions {
        text-align: right;
    }

    .btn-circle {
        width: 30px;
        height: 30px;
        padding: 6px 0px;
        border-radius: 15px;
        text-align: center;
        font-size: 12px;
        line-height: 1.42857;
    }

    .div-center {
        width: 90%;
        margin: auto;
        max-width: 400px;
        overflow: auto;
        padding: 1em 2em;
    }
</style>
